$(".listings-column").html("<%= escape_javascript(render :partial => 'grid_item_map_content', :locals => {show_distance: show_distance }) %>")
<% community_location_lat = @current_community.location ? @current_community.location.latitude : nil %>
<% community_location_lon = @current_community.location ? @current_community.location.longitude : nil %>
initialize_listing_map(
  <%= raw @listings.map { |l| {category: l[:category_id], id: l[:id], icon: l[:icon_name], latitude: l[:latitude], longitude: l[:longitude] } }.to_json %>,
  "<%= community_location_lat %>",
  "<%= community_location_lon %>",
  <%= raw viewport.to_json %>,
  "<%= I18n.locale %>",
  "<%= @current_community.use_community_location_as_default %>", true);
