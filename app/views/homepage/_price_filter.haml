- min = MoneyUtil.to_units(MoneyUtil.to_money(@current_community.price_filter_min, @current_community.currency))
- max = MoneyUtil.to_units(MoneyUtil.to_money(@current_community.price_filter_max, @current_community.currency))
- range = [min, max]
- start = [params["price_min"] || min, params["price_max"] || max]
- is_default = min == start.first.to_i && max = start.last.to_i
- is_filtered = params[:price_min].present? && !is_default
.auto-col.toggle-container.home-toolbar-toggle-container
  .toggle.with-borders{data: {toggle: "#home-toolbar-filter-menu-price"}, class: ( is_filtered ? 'inverted' : '')}
    .toggle-header-container
      .toggle-header
        = t("listings.form.price.price")
        - if is_filtered
          = "(#{params[:price_min]} - #{params[:price_max]})"
          - content_for :selected_filters do 
            %span.filter-value
              = "Price: (#{params[:price_min]} - #{params[:price_max]})"
      = icon_tag("dropdown", ["icon-dropdown"])

    .toggle-menu.hidden{id: "home-toolbar-filter-menu-price"}
      .filter-width
        - id = ["range-slider", "price"].join("-")
        .range-slider{id: id}
          - labels = ["#price-filter-min-value", "#price-filter-max-value"]
          - fields = ["#price_min", "#price_max"]
          - content_for :extra_javascript do
            :javascript
              window.ST.rangeFilter("##{id}", #{range.to_json.html_safe}, #{start.to_json.html_safe}, #{labels.to_json.html_safe}, #{fields.to_json.html_safe}, false, refreshSearchResults)

        .row
          .col-12
            .left
              %span.custom-filter-min-max-title= t("homepage.custom_filters.min")
              %span{id: "price-filter-min-value"}
              %input{type: "hidden", id: "price_min", name: "price_min", value: params["price_min"]}
            .right
              %span.custom-filter-min-max-title= t("homepage.custom_filters.max")
              %span{id: "price-filter-max-value"}
              %input{type: "hidden", id: "price_max", name: "price_max", value: params["price_max"]}
